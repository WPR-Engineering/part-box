= simple_form_for(@consumable) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :name
    = f.association :part, :label_method => :internal_part
    = f.input :quantity
    = f.input :reorderAmount
    = f.input :shelf
    = f.input :bin
    = f.input :obsolete

  .form-actions
    = f.button :button, "Create Asset".html_safe, data: {disable_with: "<i class='fa fa-bed fa-spin'></i> Creating Asset..."}, :class => "btn btn-primary"
