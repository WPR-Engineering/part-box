= simple_form_for(@consumable) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  .form-inputs
    = f.input :name
    = f.association :part, :label_method => :internal_part
    = f.input :category
    = f.input :quantity
    = f.input :reorderAmount
    = f.input :shelf
    = f.input :bin
    = f.input :obsolete
    %p
      %a.btn.btn-primary{"aria-controls" => "collapseExample", "aria-expanded" => "false", "data-toggle" => "collapse", href: "#collapseExample", role: "button"}
        Overstock
    #collapseExample.collapse
      .card.card-body
      = f.input :overstock
      = f.input :overstock_quantity
      = f.input :overstock_location
      = f.input :overstock_notes

  .form-actions
    = f.button :button, "Save Asset".html_safe, data: {disable_with: "<i class='fa fa-bed fa-spin'></i> Creating Asset..."}, :class => "btn btn-primary"
